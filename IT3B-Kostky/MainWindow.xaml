<Window x:Class="IT3B_Kostky.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IT3B_Kostky"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <Button x:Name="RollButton" Content="Roll Dice" Width="100" Click="RollButton_Click" Margin="0,0,0,20"/>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,20,0,0">
                <TextBlock x:Name="Dice1TextBlock" FontSize="24" Margin="10,0"/>
                <TextBlock x:Name="Dice2TextBlock" FontSize="24" Margin="10,0"/>
                <TextBlock x:Name="Dice3TextBlock" FontSize="24" Margin="10,0"/>
                <TextBlock x:Name="Dice4TextBlock" FontSize="24" Margin="10,0"/>
                <TextBlock x:Name="Dice5TextBlock" FontSize="24" Margin="10,0"/>
                <TextBlock x:Name="Dice6TextBlock" FontSize="24" Margin="10,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
